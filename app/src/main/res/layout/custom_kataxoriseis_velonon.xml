<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Ενημέρωση βελόνων" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="22dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView108"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="22dp"
                android:layout_weight="1"
                android:background="@drawable/textview_shape"
                android:gravity="center"
                android:text="Βελόνα 15g Ποσότητα:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/posotita15ET"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_shape"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView57"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="22dp"
                android:layout_weight="1"
                android:background="@drawable/textview_shape"
                android:gravity="center"
                android:text="Βελόνα 16g Ποσότητα:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/posotita16ET"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_shape"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView58"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="22dp"
                android:layout_weight="1"
                android:background="@drawable/textview_shape"
                android:gravity="center"
                android:text="Βελόνα 17g Ποσότητα:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/posotita17ET"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_shape"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:textSize="18sp" />
        </LinearLayout>

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/button_shape"
            android:shadowColor="#10EF08"
            android:text="Καταχωρηση / Ενημερωση"
            app:finalCornerAngle="50dp"
            app:initialCornerAngle="50dp"
            app:spinning_bar_color="@android:color/holo_blue_bright"
            app:spinning_bar_padding="8dp"
            app:spinning_bar_width="4dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>