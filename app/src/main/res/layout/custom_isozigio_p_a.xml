<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">

            <LinearLayout
                android:id="@+id/linearLayout25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/titleTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/textview_shape"
                    android:gravity="center"
                    android:text="TextView" />


                <EditText
                    android:id="@+id/textET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_shape"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="περιγραφή"
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <TextView
                android:id="@+id/date_inTV"
                android:layout_width="120dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="58dp"
                android:layout_marginEnd="22dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_shape"
                android:ems="10"
                android:gravity="center"
                app:layout_constraintEnd_toStartOf="@+id/date_outTV"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout25" />

            <TextView
                android:id="@+id/date_outTV"
                android:layout_width="120dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="58dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_shape"
                android:ems="10"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout25" />

            <TextView
                android:id="@+id/textView63"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="22dp"
                android:background="@drawable/textview_shape"
                android:paddingStart="0dp"
                android:paddingTop="8dp"
                android:text="Ημ/νία εισόδου"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/textView83"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout25" />

            <TextView
                android:id="@+id/textView83"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/textview_shape"
                android:paddingStart="0dp"
                android:paddingTop="8dp"
                android:text="Ημ/νία εξόδου"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout25" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
