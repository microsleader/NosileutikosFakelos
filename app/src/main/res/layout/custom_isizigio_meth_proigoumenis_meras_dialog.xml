<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="32dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Ισοζύγιο προηγούμενης μέρας" />

        <TextView
            android:id="@+id/textView65"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/textview_shape"
            android:gravity="center"
            android:padding="0dp"
            android:text="ΙΣΟΖΥΓΙΟ. 24ΩΡΟΥ"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView67" />

        <TextView
            android:id="@+id/textView67"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/textview_shape"
            android:gravity="center"
            android:padding="0dp"
            android:text="ΑΠΟΒΑΛ. 24ΩΡΟΥ"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView68" />

        <TextView
            android:id="@+id/textView68"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="88dp"
            android:background="@drawable/textview_shape"
            android:gravity="center"
            android:padding="0dp"
            android:text="ΠΡΟΣΛ. 24ΩΡΟΥ"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/isozigioTV"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_shape"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/textView65"
            app:layout_constraintTop_toBottomOf="@+id/apovTV" />

        <TextView
            android:id="@+id/apovTV"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_shape"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/textView67"
            app:layout_constraintTop_toBottomOf="@+id/prosTV" />

        <TextView
            android:id="@+id/prosTV"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="88dp"
            android:background="@drawable/edittext_shape"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/textView68"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>