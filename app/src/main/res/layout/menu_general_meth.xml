<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filladiOrofoiLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="22dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="22dp"
    android:orientation="vertical"
    android:weightSum="2">


    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/Nosil_Elegxos"
            android:layout_width="0dp"
            android:layout_height="83dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1.5"
            android:background="#728a74"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_weight="1.5"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Νοσηλ. έλεγχος \n Νοσηλ. λογοδοσία"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/zotika_meth"
            android:layout_width="0dp"
            android:layout_height="83dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.5"
            android:background="#cb707f"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_weight="1.5"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Ζωτικά σημεία / Ώρα"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/istorikoMeth"
            android:layout_width="0dp"
            android:layout_height="83dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1.5"
            android:background="#a180a4"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_weight="1.5"
                android:src="@drawable/search" />

            <TextView
                android:id="@+id/gr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Νοσηλ. Ιστορικο"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/kath_kal_meth"
            android:layout_width="0dp"
            android:layout_height="83dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.5"
            android:background="#8eb9b9"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_weight="1.5"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Καθετήρες - Καλλιεργιες"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/isozigioMeth"
            android:layout_width="0dp"
            android:layout_height="83dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1.5"
            android:background="#9d997e"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_weight="1.5"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Ισοζύγιο ΜΕΘ"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="83dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.5"
            android:background="#7a7ca9"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_weight="1.5"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>